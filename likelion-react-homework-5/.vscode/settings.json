{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  // 참고: https://github.com/paolotiu/tailwind-intellisense-regex-list?tab=readme-ov-file#readme
  "tailwindCSS.experimental.classRegex": [
    ["Styles\\s*(?::\\s*[^=]+)?\\s*=\\s*([^;]*);", "['\"`]([^'\"`]*)['\"`]"],
    ["clsx\\(.*?\\)(?!\\])", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    ["classnames\\(([^)]*)\\)", "[\"'`]([^\"'`]*)[\"'`]"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "javascriptreact": "html",
    "plaintext": "html"
  },
  // "tailwindCSS.experimental.configFile": "./tailwind.config.js",
  "tailwindCSS.experimental.configFile": "./src/styles/main.css",
  "tailwind-fold.foldStyle": "QUOTES",
  "tailwind-fold.unfoldIfLineSelected": true,
  "tailwind-fold.unfoldedTextOpacity": 0.9,
  "tailwind-fold.autoFold": false
}
